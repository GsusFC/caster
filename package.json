{
  "name": "farcaster-scheduler",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo for Farcaster scheduling application",
  "author": "GsusFC",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "dev:web": "turbo run dev --filter=web",
    "dev:worker": "turbo run dev --filter=worker",
    "db:migrate": "pnpm --filter=database prisma migrate dev",
    "db:studio": "pnpm --filter=database prisma studio",
    "db:generate": "pnpm --filter=database prisma generate",
    "db:push": "pnpm --filter=database prisma db push"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "prettier": "^3.2.5",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
